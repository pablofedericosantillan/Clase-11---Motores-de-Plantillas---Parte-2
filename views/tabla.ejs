<% if (hayProductos){%>
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto URL</th>
        </tr>

        <% productos.forEach(function(productos) {%>
            <tr>
                <td>
                    <%= productos.title %>
                </td>
                <td>
                    <%= productos.price %>
                </td>
                <td>
                    <img width="50" src=<%= productos.thumbnail %>
                </td>
            </tr>
            <%});%>
        </table>
        <%}else{%>
        <h3 class="alert alert-danger">no se encontraron datos</h1>
        <%}%>



</div>

